@model ModeloMultiple

@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<style>
    .panelForm {
        height: auto;
        width: 90%;
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Exito"]
    </div>
}

<section class="mt-5">
    <h1>Alta de alumno</h1>
</section>

<div class="mt-5">
    <form asp-controller="Alumno" asp-action="CrearAlumno">
        <div class="d-flex justify-content-center">
            <section class="panelForm me-3 shadow p-3 mb-5 rounded">
                <h2>Datos del Alumno</h2>

                @*contenedor de inputs*@
                <div>
                    @*input nombre*@
                    <div class="m-2">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input asp-for="CrearAlumnoModel.NombreAlumno" type="text" placeholder="Ingrese el nombre*" id="nombre" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.NombreAlumno" class="text-danger"></span>
                    </div>

                    @*input apellidP*@
                    <div class="m-2">
                        <label for="apellidop" class="form-label">Apellido Paterno</label>
                        <input asp-for="CrearAlumnoModel.ApellidoPaternoAlumno" type="text" placeholder="Ingrese el apellido paterno*" id="apellidop" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.ApellidoPaternoAlumno" class="text-danger"></span>
                    </div>

                    @*input apellidM*@
                    <div class="m-2">
                        <label for="apellidom" class="form-label">Apellido Materno</label>
                        <input asp-for="CrearAlumnoModel.ApellidoMaternoAlumno" type="text" placeholder="Ingrese el apellido materno*" id="apellidom" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.ApellidoMaternoAlumno" class="text-danger"></span>
                    </div>

                    @*input matricula*@
                    <div class="m-2">
                        <label for="matricula" class="form-label">Matricula</label>
                        <input asp-for="CrearAlumnoModel.Matricula" type="text" placeholder="Ingrese la matricula*" id="matricula" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.Matricula" class="text-danger"></span>
                    </div>

                    @*input curp*@
                    <div class="m-2">
                        <label for="curp" class="form-label">Curp</label>
                        <input asp-for="CrearAlumnoModel.Curp" type="text" placeholder="Ingrese el curp*" id="curp" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.Curp" class="text-danger"></span>
                    </div>

                    @*input fecha ingreso*@
                    <div class="m-2">
                        <label for="fechaIngreso" class="form-label">Fecha de ingreso*</label>
                        <input asp-for="CrearAlumnoModel.FechaIngreso" id="fechaIngreso" class="form-control" />
                        <span asp-validation-for="CrearAlumnoModel.FechaIngreso" class="text-danger"></span>
                    </div>

                    @*input estatus*@
                    <div class="m-2">
                        <label for="estatus" class="form-label">Estatus*</label>
                        <select asp-for="CrearAlumnoModel.Estatus" class="form-select" id="estatus">
                            <option selected>Vigente</option>
                            <option>Baja</option>
                        </select>
                        <span asp-validation-for="CrearAlumnoModel.Estatus" class="text-danger"></span>
                    </div>

                    @*input grado escolar*@
                    <div class="m-2">
                        <label for="gradoEscolar" class="form-label">Grado Escolar*</label>
                        <select asp-for="CrearAlumnoModel.GradoEscolar" class="form-select" id="gradoEscolar">
                            <option selected>Primaria</option>
                            <option>Secundaria</option>
                            <option>Bachillerato</option>
                            <option>Licenciatura</option>
                        </select>
                        <span asp-validation-for="CrearAlumnoModel.GradoEscolar" class="text-danger"></span>
                    </div>

                    @*input nivel educativo*@
                    <div class="m-2">
                        <label for="gradoEducativo" class="form-label">Nivel Educativo*</label>
                        <select asp-for="CrearAlumnoModel.NivelEducativo" class="form-select" id="gradoEducativo">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>Año</option>
                            <option>Semestre</option>
                            <option>Cuatrimestre</option>
                        </select>
                        <span asp-validation-for="CrearAlumnoModel.NivelEducativo" class="text-danger"></span>
                    </div>

                    <div class="m-2">
                        <button type="submit" class="btn btn-primary">Alta de alumno</button>
                    </div>
                </div>
            </section>

            <section class="panelForm ms-3 shadow p-3 mb-5 rounded">
                <h2>Datos de Contacto</h2>

                <div>
                    @*nombre*@
                    <div class="m-2">
                        <label for="nombreContacto" class="form-label">Nombre del contacto</label>
                        <input asp-for="CrearContactoModel.NombreContacto" type="text" placeholder="Ingrese el nombre*" id="nombreContacto" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.NombreContacto" class="text-danger"></span>
                    </div>

                    @*ApellidoPaterno*@
                    <div class="m-2">
                        <label for="apellidoPaternoContactp" class="form-label">Apellido paterno del contacto</label>
                        <input asp-for="CrearContactoModel.ApellidoPaternoContacto" type="text" placeholder="Ingrese apellido paterno*" id="apellidoPaternoContactp" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.ApellidoPaternoContacto" class="text-danger"></span>
                    </div>

                    @*ApellidoMaterno*@
                    <div class="m-2">
                        <label for="apellidoMaternoContacto" class="form-label">Apellido materno del contacto</label>
                        <input asp-for="CrearContactoModel.ApellidoMaternoContacto" type="text" placeholder="Ingrese apellido materno*" id="apellidoMaternoContacto" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.ApellidoMaternoContacto" class="text-danger"></span>
                    </div>

                    @*telefono*@
                    <div class="m-2">
                        <label for="numeroContacto" class="form-label">Telefono o numero de contacto</label>
                        <input asp-for="CrearContactoModel.Telefono" type="tel" placeholder="Ingrese el numero*" id="numeroContacto" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.Telefono" class="text-danger"></span>
                    </div>

                    @*calle*@
                    <div class="m-2">
                        <label for="calle" class="form-label">Calle</label>
                        <input asp-for="CrearContactoModel.Calle" type="text" placeholder="Ingrese el numero*" id="calle" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.Calle" class="text-danger"></span>
                    </div>

                    @*Colonia*@
                    <div class="m-2">
                        <label for="colonia" class="form-label">Colonia</label>
                        <input asp-for="CrearContactoModel.Colonia" type="text" placeholder="Ingrese la colonia*" id="colonia" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.Colonia" class="text-danger"></span>
                    </div>

                    @*numero exterior*@
                    <div class="m-2">
                        <label for="numeroExterior" class="form-label">Numero Exterior</label>
                        <input asp-for="CrearContactoModel.NumeroExterior" type="text" placeholder="Ingrese el numero exterior*" id="numeroExterior" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.NumeroExterior" class="text-danger"></span>
                    </div>

                    @*numero interior*@
                    <div class="m-2">
                        <label for="numeroInterior" class="form-label">Numero Interior</label>
                        <input asp-for="CrearContactoModel.NumeroInterior" type="text" placeholder="Ingrese el numero interior" id="numeroInterior" class="form-control" />
                    </div>

                    @*codigo postal*@
                    <div class="m-2">
                        <label for="codigoPostal" class="form-label">Codigo Postal</label>
                        <input asp-for="CrearContactoModel.CodigoPostal" type="number" placeholder="Codigo postal*" id="codigoPostal" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.CodigoPostal" class="text-danger"></span>
                    </div>

                    @*estado*@
                    <div class="m-2">
                        <label for="calle" class="form-label">Estado</label>
                        <input asp-for="CrearContactoModel.Estado" type="text" placeholder="Ingrese el numero*" id="calle" class="form-control" />
                        <span asp-validation-for="CrearContactoModel.Estado" class="text-danger"></span>
                    </div>

                    @*parentesco*@
                    <div class="m-2">
                        <label for="parentesco" class="form-label">Parentesco</label>
                        <select class="form-select" asp-for="CrearContactoModel.Parentesco">
                            <option selected>Madre</option>
                            <option>Padre</option>
                            <option>Hermano</option>
                            <option>Hermana</option>
                            <option>Familiar</option>
                        </select>
                        <span asp-validation-for="CrearContactoModel.Parentesco" class="text-danger"></span>
                    </div>
                </div>
            </section>
        </div>
    </form>
</div>