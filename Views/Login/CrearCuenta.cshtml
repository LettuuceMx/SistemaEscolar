@model CrearCuenta

@{
    Layout = "_LayoutLogin";
}

<style>
    .panelLogin {
        margin-top: 20rem;
        width: 30%;
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}


<div class="panelLogin container d-flex justify-content-center align-items-center shadow p-3 mb-5 rounded">
    <form asp-controller="Login" asp-action="CrearCuentaRegistro">
        <h1>Crear cuenta</h1>

        <div class="d-flex flex-column">
            <label class="form-label" for="cuenta">Correo</label>
            <input class="form-control" type="email" asp-for="Correo" id="cuenta"/>
        </div>

        <div class="d-flex flex-column">
            <label class="form-label" for="contra">Contraseña</label>
            <input class="form-control" type="password" asp-for="Password" id="contra"/>
        </div>

        <div class="d-flex flex-column">
            <label class="form-label" for="contraRepetir">Confirmar contraseña</label>
            <input class="form-control" type="password" asp-for="ConfirmarPassword" id="contraRepetir"/>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Crear cuenta</button>

        <p>Ya tienes una cuenta <a asp-action="IniciarSesion">Login</a></p>
    </form>
</div>